{
  "name": "typescript-starter-template",
  "version": "0.0.0-development",
  "private": true,
  "description": "",
  "homepage": "https://github.com/tksst/typescript-starter-template",
  "repository": "github:tksst/typescript-starter-template",
  "license": "CC0-1.0",
  "author": {
    "name": "Takashi Sato",
    "email": "takashi@tks.st",
    "url": "https://www.tks.st/"
  },
  "type": "module",
  "exports": {
    "import": "./dist/lib/index.js",
    "require": "./dist/lib/index.cjs"
  },
  "types": "./dist/lib/index.d.ts",
  "bin": {
    "typescript-node-starter": "./dist/bin/index.js"
  },
  "scripts": {
    "prebuild": "tss-rmrf ./dist/",
    "build": "run-s --continue-on-error build:*",
    "build:lib": "tsup --config ./tsup.config.lib.js",
    "build:bin": "tsup --config ./tsup.config.bin.js",
    "prepack": "npm run build",
    "prewatch": "npm run prebuild",
    "watch": "run-p --continue-on-error --print-label watch:*",
    "watch:lib": "npm run build:lib -- --watch",
    "watch:bin": "npm run build:bin -- --watch",
    "fix": "run-s --continue-on-error fix:*",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "lint": "run-p --continue-on-error --print-label lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --color --cache --cache-strategy content --cache-location ./node_modules/.cache/eslint/ --ext .js,.cjs,.mjs,.ts,.cts,.mts .",
    "lint:tsc": "tsc --noEmit",
    "test": "run-s test:*",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@tksst/typescript-starter": "2.4.2",
    "npm-run-all": "4.1.5"
  },
  "dependencies": {
    "source-map-support": "0.5.21"
  },
  "packageManager": "npm@8.18.0",
  "engines": {
    "node": ">= 14"
  }
}
